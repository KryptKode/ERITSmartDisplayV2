<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_list_item_height"
    android:background="@drawable/background_state"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/cardview_default_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/display_imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/display_avatar"
            app:srcCompat="@drawable/ic_desktop_windows_black_72dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/frame_layout_child_background"
            android:padding="8dp">

            <TextView
                android:id="@+id/display_name_textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                tools:text="Erit Smart Display" />

            <ImageButton
                android:id="@+id/display_overflow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="@drawable/background_state"
                android:contentDescription="@string/overflow_menu_for_display"
                app:srcCompat="@drawable/ic_more_vert_black_24dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>